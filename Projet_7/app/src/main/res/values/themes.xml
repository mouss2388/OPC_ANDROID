<resources>
    <!-- Base application theme. -->
    <style name="Theme.Projet_7" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/google</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SignInActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>

    </style>

    <!-- Toolbar theme. -->
    <style name="ToolBarStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:background">@color/main_color</item>
        <item name="android:statusBarColor">@color/google</item>
    </style>

    <!--NAVIGATION VIEW-->
    <style name="whiteText">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="whiteTextBold" parent="whiteText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MenuItemTextAppearance">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_menu_size</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

</resources>