<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.DetailActivity">

    <ImageView
        android:id="@+id/restaurant_Img"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@drawable/ic_no_image_available"
        android:contentDescription="image du restaurant"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="description floating action button"
        android:elevation="1dp"
        app:backgroundTint="@color/white"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@id/restaurant_Img"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_check_circle_outline_24"
        app:tint="@color/reserved" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/main_color"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restaurant_Img">

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Le Zinc"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.legacy.widget.Space
                android:layout_width="24dp"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/stars_rating_restaurant"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="3"
                android:progressBackgroundTint="@color/grey"
                android:progressTint="#FFE500" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/address_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 rue du Foubourg PoissonniÃ¨re"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutCompat">

        <TextView
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_call_24"
            android:drawablePadding="4dp"
            android:text="CALL"
            android:textColor="@color/main_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.legacy.widget.Space
            android:layout_width="24dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_star_24"
            android:drawablePadding="4dp"
            android:text="LIKE"
            android:textColor="@color/main_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.legacy.widget.Space
            android:layout_width="24dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_globe_24"
            android:drawablePadding="4dp"
            android:text="WEBSITE"
            android:textColor="@color/main_color"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
<View
    android:id="@+id/divider"
    app:layout_constraintTop_toBottomOf="@id/buttons"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@drawable/divider"
    />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_Work_Mates"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        tools:listitem="@layout/item_workmate"/>


</androidx.constraintlayout.widget.ConstraintLayout>